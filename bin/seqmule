#!/usr/bin/env perl

use strict;
use warnings;
use FindBin qw/$RealBin/;
use File::Spec;


my $versionfile=File::Spec->catfile($RealBin,"..","version");
die "Version file missing.\n" unless -f $versionfile;
my $version=`cat $versionfile`;
chomp $version;

my $subprogram=shift @ARGV;

die 
"Program: seqmule (automated pipeline for whole exome/genome analysis)
Version: $version

Usage:   seqmule <subprogram> [options]

Command: 
download        download default databases
pipeline        generate analysis scripts
run		execute seqmule-generated scripts
stats     	produce statistics and plots
update		automatic update SeqMule
\n" if (!defined $subprogram or $subprogram !~ /download|pipeline|stats|run/i);

warn "Current version: $version\n";
system(File::Spec->catfile($RealBin,"secondary","checkupgrade"));

if ($subprogram =~ /download/i)
{
    exec(File::Spec->catfile($RealBin,"secondary","download"),@ARGV);
}
elsif ($subprogram =~ /pipeline/i)
{
    exec(File::Spec->catfile($RealBin,"secondary","pipeline"),@ARGV);
}
elsif ($subprogram =~ /stats/i)
{
    exec(File::Spec->catfile($RealBin,"secondary","stats"),@ARGV);
}
elsif ($subprogram =~ /run/i)
{
    exec(File::Spec->catfile($RealBin,"secondary","run"),@ARGV);
}
elsif ($subprogram =~ /update/i)
{
    exec(File::Spec->catfile($RealBin,"secondary","update"),@ARGV);
}
